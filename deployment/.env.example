# Agentic RedTeam Radar - Production Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=radar
POSTGRES_DB=radar_db

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
# OpenAI API Key for GPT-based agents
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude-based agents
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Application secret key for sessions/JWT
SECRET_KEY=your-super-secret-application-key-here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Grafana admin password
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Prometheus retention period (days)
PROMETHEUS_RETENTION_DAYS=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RADAR_RATE_LIMIT_REQUESTS_PER_MINUTE=60
RADAR_RATE_LIMIT_BURST=10
RADAR_RATE_LIMIT_MAX_CONCURRENT=5

# Input validation
RADAR_MAX_PAYLOAD_SIZE=10000
RADAR_ENABLE_INPUT_SANITIZATION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Application scaling
RADAR_MAX_CONCURRENCY=10
RADAR_MAX_AGENT_CONCURRENCY=5
RADAR_TIMEOUT=30

# Cache settings
RADAR_CACHE_TTL=3600
RADAR_CACHE_MAX_SIZE=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
RADAR_LOG_LEVEL=INFO
RADAR_AUDIT_LOGGING=true

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL certificate paths (relative to deployment directory)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your domain name for SSL certificate
DOMAIN_NAME=radar.company.com

# Allowed hosts for the application
ALLOWED_HOSTS=radar.company.com,localhost,127.0.0.1

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Report storage settings
RADAR_OUTPUT_DIR=/app/reports
RADAR_REPORT_RETENTION_DAYS=90

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email settings for notifications (optional)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=radar@company.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_USE_TLS=true

# =============================================================================
# DEVELOPMENT/TESTING (set to false in production)
# =============================================================================
DEBUG=false
TESTING=false
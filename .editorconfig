# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Python configuration files
[{pyproject.toml,setup.cfg,tox.ini,noxfile.py}]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[{*.toml,*.ini,*.cfg}]
indent_size = 4

# Web files
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2
EOF < /dev/null

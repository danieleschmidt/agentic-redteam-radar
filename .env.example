# Agentic RedTeam Radar Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required for agent testing)
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic API Configuration  
ANTHROPIC_API_KEY=anthropic_your_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# =============================================================================
# RADAR SCANNER CONFIGURATION
# =============================================================================

# Logging Configuration
RADAR_LOG_LEVEL=INFO
RADAR_LOG_FILE=./logs/radar.log
RADAR_ENABLE_DEBUG=false

# Concurrency and Performance
RADAR_MAX_CONCURRENCY=5
RADAR_MAX_AGENT_CONCURRENCY=3
RADAR_PATTERN_CONCURRENCY=2
RADAR_TIMEOUT=30
RADAR_RETRY_ATTEMPTS=3
RADAR_MAX_PAYLOADS_PER_PATTERN=20

# Attack Pattern Configuration
RADAR_ENABLED_PATTERNS=prompt_injection,info_disclosure,policy_bypass,chain_of_thought
RADAR_MIN_SEVERITY=low
RADAR_SEVERITY_THRESHOLD=medium
RADAR_FAIL_ON_SEVERITY=high

# Output Configuration
RADAR_OUTPUT_FORMAT=json
RADAR_OUTPUT_DIR=./reports
RADAR_INCLUDE_PAYLOADS=false
RADAR_INCLUDE_RESPONSES=true
RADAR_SAVE_ARTIFACTS=true

# Rate Limiting
RADAR_RATE_LIMIT=60
RADAR_CACHE_RESULTS=true
RADAR_CACHE_TTL=3600

# Security Configuration
RADAR_SANITIZE_OUTPUT=true
RADAR_REDACT_SENSITIVE_DATA=true
RADAR_ALLOWED_DOMAINS=openai.com,anthropic.com
RADAR_BLOCKED_DOMAINS=

# =============================================================================
# DATA STORAGE CONFIGURATION
# =============================================================================

# Database Configuration (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./data/radar.db

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Python Configuration
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONPATH=./src

# Development Mode
DEV_MODE=true
DEBUG=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_PATH=/health

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration (for future API authentication)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Rate Limiting
GLOBAL_RATE_LIMIT=100
API_RATE_LIMIT=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPO=terragonlabs/agentic-redteam-radar

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=terragonlabs/agentic-redteam-radar
DOCKER_TAG=latest

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
ENABLE_MULTI_AGENT_TESTING=false
ENABLE_REAL_TIME_MONITORING=false
ENABLE_ML_DETECTION=false
ENABLE_API_SERVER=false

# Security Features
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPLIANCE_REPORTING=true
ENABLE_VULNERABILITY_TRACKING=true
EOF < /dev/null
